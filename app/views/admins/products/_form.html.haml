
= form_for @admins_product, url: url do |f|
  - if @admins_product.errors.any?
    #error_explanation
      %h2
        = pluralize(@admins_product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @admins_product.errors.full_messages.each do |msg|
          %li{style: "color: red;"}= msg
  .row
    .col-md-6
      .form-group
        = f.label :'Tên'
        = f.text_field :name, class: "form-control"
    .col-md-6
      .form-group
        = f.label :'Giá'
        = f.number_field :price, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :'Năm sản Xuất'
        = f.number_field :year, class: "form-control"
    .col-md-6
      .form-group
        = f.label :transmission
        = f.text_field :transmission, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :'Kiểu dáng'
        = f.text_field :body_type, class: "form-control"
    .col-md-6
      .form-group
        = f.label :'Số ghế'
        = f.number_field :seats, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :'Số cửa'
        = f.number_field :doors, class: "form-control"
    .col-md-6
      .form-group
        = f.label :'Số màu'
        = f.number_field :colors, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :'kích thước động cơ'
        = f.number_field :engine_size, class: "form-control"
    .col-md-6
      .form-group
        = f.label :'Nhiên liệu'
        = f.text_field :fuel, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :'Xuất xứ'
        = f.text_field :origin, class: "form-control"
  .row
    .col-md-12
      .form-group
        = f.label :images
        = f.file_field :images, class: "form-control", multiple: true
  .clearfix
  .col-xs-12
    = f.submit "Save", class: "btn btn-primary"
%br