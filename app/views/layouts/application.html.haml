!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Toyota
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'home', 'data-turbolinks-track': 'reload'

    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'home', 'data-turbolinks-track': 'reload'
  %body{"data-scroll-animation" => 'true'}
    = render 'layouts/facebook_chat'
    = render 'layouts/header'
    = yield
    = render 'layouts/feature_cars'
    = render 'layouts/car_model'
    = render 'layouts/news'
    = render 'layouts/footer'
  = javascript_pack_tag 'theme-dist'
